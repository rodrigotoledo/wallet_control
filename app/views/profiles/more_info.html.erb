<%= form_for(@profile, url: wizard_path, method: :put, html: {class: 'text-left w-full', 'data-turbo': false}) do |f| %>
<div class="flex flex-col text-center w-full">
  <div class="flex bg-green-100 p-10">
    <div class="w-1/2 mr-4">
      <h2 class="font-bold text-2xl text-green-600">Basic of your info</h2>
      <div class="text-left">
        <div class="mb-4">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
        </div>

        <div class="mb-4">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
        </div>

        <div>
          <%= f.submit 'Complete your profile', class: 'bg-green-700 text-white p-2 rounded' %>
        </div>
      </div>
    </div>

    <div class="w-1/2">
      <h2 class="font-bold text-2xl text-green-600">More about you...</h2>
      <div class="text-left">
        <div class="mb-4">
          <%= f.label :phone %>
          <%= f.phone_field :phone, class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
        </div>

        <div class="mb-4">
          <%= f.label :address %>
          <%= f.text_field :address, class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
        </div>
      </div>

    </div>
  </div>
</div>
<% end %>
