<h2 class="font-bold text-2xl text-green-600">Access your Wallet, the control it's yours</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'text-left'}) do |f| %>
  <div class="my-4">
    <%= f.label :email %>
    <%= f.email_field :email, value: '', class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
  </div>

  <div class="my-4">
    <%= f.label :password %>
    <%= f.password_field :password, value: '', class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
  </div>

  <div class="my-4">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>

  <div class="my-4">
    <%= f.submit 'Access my account', class: 'bg-green-700 text-white p-2 rounded' %>
  </div>

  <%= render 'devise/shared/links' %>
<% end %>
