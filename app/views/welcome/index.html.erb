<div class="flex bg-green-100 p-10">
  <div class="w-1/2 mr-4">
    <h2 class="font-bold text-2xl text-green-600">Access your Wallet, the control it's yours</h2>

    <%= form_for(:user, url: user_session_path, method: :post, class: 'text-left') do |f| %>
      <div class="mb-4">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
      </div>

      <div class="mb-4">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
      </div>

      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>

      <div>
        <%= f.submit 'Access my account', class: 'bg-green-700 text-white p-2 rounded' %>
      </div>
    <% end %>
  </div>

  <div class="w-1/2">
    <h2 class="font-bold text-2xl text-green-600">Don't have Yet?! Let's go...</h2>
    <%= form_for(:user, url: registration_path(:user), method: :post, class: 'text-left') do |f| %>
      <div class="mb-4">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
      </div>

      <div class="mb-4">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
      </div>

      <div>
        <%= f.submit 'Fill with more info', class: 'bg-green-700 text-white p-2 rounded' %>
      </div>
    <% end %>

  </div>
</div>
