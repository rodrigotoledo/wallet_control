<%= render "shared/error_messages", resource: resource %>
<div class="flex bg-green-100 p-10">
  <div class="w-1/2 mr-4">
    <%= render 'devise/shared/sign_in_form' %>
  </div>

  <div class="w-1/2">
    <h2 class="font-bold text-2xl text-green-600">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'text-left' }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="my-4">
        <%= f.label :password, "New password" %>-
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
      </div>

      <div class="my-4">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
      </div>

      <div class="my-4">
        <%= f.submit "Change my password", class: 'bg-green-700 text-white p-2 rounded' %>
      </div>
    <% end %>
  </div>
</div>
