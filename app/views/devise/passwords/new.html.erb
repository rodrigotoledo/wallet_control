<%= render "shared/error_messages", resource: resource %>
<div class="flex bg-green-100 p-10">
  <div class="w-1/2 mr-4">
    <%= render 'devise/shared/sign_in_form' %>
  </div>

  <div class="w-1/2">
    <h2 class="font-bold text-2xl text-green-600">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'text-left' }) do |f| %>
      <div class="my-4">
        <%= f.label :email %>
        <%= f.email_field :email, value: '', class: 'h-12 rounded-md border  border-gray-800 p-2 w-full' %>
      </div>

      <div class="my-4">
        <%= f.submit "Send me reset password instructions", class: 'bg-green-700 text-white p-2 rounded' %>
      </div>
    <% end %>
  </div>
</div>
